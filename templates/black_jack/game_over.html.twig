{# templates/black_jack/game_over.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Game Over{% endblock %}

{% block body %}
    <h1>Game Over</h1>

    <h2>Results</h2>

    <table>
        <thead>
            <tr>
                <th>Player Name</th>
                <th>Score</th>
                <th>Status</th>
                <th>Cards</th>
            </tr>
        </thead>
        <tbody>
            {% for result in results %}
                <tr>
                    <td>{{ result.name }}</td>
                    <td>{{ result.score }}</td>
                    <td>
                        {% if result.status == 'win' %}
                            <span style="color: green;">Win</span>
                        {% elseif result.status == 'lose' %}
                            <span style="color: red;">Lose</span>
                        {% else %}
                            <span>Draw</span>
                        {% endif %}
                    </td>
                    <td>
                        {% for card in result.cards %}
                            {{ card }}
                            {% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h3>Bank</h3>
    <p>Score: {{ bank.score }}</p>
    <p>Cards: 
        {% for card in bank.cards %}
            {{ card }}
            {% if not loop.last %}, {% endif %}
        {% endfor %}
    </p>

    <a href="{{ path('blackjack_home') }}">Play Again</a>
{% endblock %}
